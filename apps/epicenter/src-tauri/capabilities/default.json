{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"fs:default",
		"fs:allow-read",
		"fs:allow-write",
		"fs:allow-app-write",
		"fs:allow-create",
		"fs:allow-mkdir",
		"fs:allow-remove",
		"fs:allow-exists",
		"fs:allow-stat",
		"fs:allow-read-dir",
		{
			"identifier": "fs:scope",
			"allow": [
				{
					"path": "$APPLOCALDATA/**"
				},
				{
					"path": "$APPDATA/**"
				}
			]
		},
		"opener:default",
		{
			"identifier": "opener:allow-reveal-item-in-dir",
			"allow": [
				{
					"path": "$APPLOCALDATA/**"
				},
				{
					"path": "$APPDATA/**"
				}
			]
		}
	]
}
